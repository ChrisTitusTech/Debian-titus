	background = false,
	border_margin = '5',
	border_width = 5,
	cpu_avg_samples = 2,
	-- default_outline_color 000000
	-- default_shade_color 000000
	double_buffer = true,
	draw_borders = false,
	draw_graph_borders = false,
	draw_outline = false,
	draw_shades = false,
	gap_x = 30,
	gap_y = 50,
	max_specials = '1024',
	max_user_text = 10000,
	maximum_width = 900,
	minimum_width = 350,
	net_avg_samples = 2,
	no_buffers = true,
	override_utf8_locale = true,
	own_window_class = 'Conky',
	own_window = true,
